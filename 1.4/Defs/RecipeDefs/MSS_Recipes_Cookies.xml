    <jobString>Baking a Christmas surprise.</jobString>
    <workAmount>400</workAmount>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <recipeUsers>
			<li>ElectricStove</li>	
			<li>FueledStove</li>			
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>VCE_Flour</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
      <li>
				<filter>
					<thingDefs>
						<li>Chocolate</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
		</ingredients>
    <workSkill>Cooking</workSkill>
    <products>
      <MSSChristmasMurderCookie>10</MSSChristmasMurderCookie>
    </products>
  </RecipeDef>
